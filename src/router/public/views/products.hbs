<div class="text-center container">
    <div>
        <h4 class="mt-4 mb-0"><strong>CoderStore</strong></h4>
    </div>
    <div class="row p-4">
        {{#if hasProducts}}
            {{#each products}}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="ratio ratio-16x9">
                            <img src="{{this.thumbnail}}" class="w-100 h-100" style="object-position: center center; object-fit: cover"/>
                        </div>
                        <div class="card-body d-flex align-content-between flex-wrap">
                            <div class="w-100">
                                <h5 class="card-title mb-3">{{this.name}}</h5>
                            </div>
                            <div class="w-100">
                                <p>{{this.description}}</p>
                            </div>
                            <div class="w-100">
                            </div>
                            <div class="w-100">
                                <h6 class="mb-3">${{this.price}}</h6>
                                <p><span class="fw-bolder">Stock: </span>{{this.stock}}</p>
                                <div class="mb-2">
                                    <a href="" onclick="removeQty(1)">
                                        <i class="fas fa-minus me-2"></i>
                                    </a>
                                    <span class="border px-2">1</span>
                                    <a href="" onclick="addQty({{this.stock}})">
                                        <i class="fas fa-plus ms-2"></i>
                                    </a>
                                </div>
                                <button type="button" class="btn btn-outline-success" onClick="addProduct('{{this.cartId}}', '{{this.id}}')">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            {{#if error}}
                <div>
                    {{error.message}}
                </div>
            {{else}}
                <div>
                    No products
                </div>
            {{/if}}
        {{/if}}
    </div>
</div>
<script src="../js/products.js"></script>