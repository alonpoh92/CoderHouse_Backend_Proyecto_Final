<div class="row">
    <div class="col-12 p-5 border border-light border-3 rounded">
        <h2 class="mb-3 fw-bold text-center">PRODUCTS LIST</h2>
        <div style="max-height: 300px; overflow: auto;">
            {{#if products}}
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Name</th>
                            <th scope="col" class="text-center">Price</th>
                            <th scope="col" class="text-center">Thumbnail</th>
                        </tr>
                    </thead>
                    <tbody style="max-height: 100px;">
                        {{#each data}}
                            <tr>
                                <td class="text-center">{{this.title}}</td>
                                <td class="text-center">{{this.price}}</td>
                                <td class="text-center"><img style="height: 30px;" src="{{this.thumbnail}}"></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <div class="bg-warning p-4 my-2", style="--bs-bg-opacity: .5;">
                    <p class="p-0 m-0"> No products found <i class="fa-solid fa-face-frown ms-2"></i></p>
                </div>
            {{/if}}
        </div>
    </div>
</div>
        