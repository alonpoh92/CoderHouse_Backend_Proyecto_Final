{{#if error}}
    <p>{{error}}</p>
{{else}}
    <div class="text-center container">
        <h4 class="mt-4 mb-0"><strong>CoderStore</strong></h4>
        <div class="row p-4">
            {{#each products}}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="ratio ratio-16x9">
                            <a href="#!">
                                <img src="{{#if this.photoInternal}}../../../uploads/products/{{/if}}{{this.photo}}" class="w-100 h-100" style="object-position: center center; object-fit: cover"/>
                            </a>
                        </div>
                        <div class="card-body d-flex align-content-between flex-wrap">
                            <div class="w-100">
                                <a href="" class="text-reset text-decoration-none">
                                    <h5 class="card-title mb-3">{{this.name}}</h5>
                                </a>
                            </div>
                            <div class="w-100">
                                <p>{{this.description}}</p>
                            </div>
                            <div class="w-100">
                                <h6 class="mb-3">${{this.price}}</h6>
                                <button type="button" class="btn btn-outline-success" onClick="addProduct('{{this.id}}')">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}
<script src="../js/store.js"></script>