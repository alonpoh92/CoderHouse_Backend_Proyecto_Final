<div class="row p-4">
    <div class="col-5 d-flex align-items-center">
        <div class="w-100 h-100">
            <div class="card mb-4 h-100">
            <div class="card-body text-center d-flex align-items-center justify-content-center">
                <div>
                    <img src="../uploads/avatars/{{avatar}}" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                    <h5 class="my-3 fw-bolder">{{name}}</h5>
                    <div class="d-flex justify-content-center mb-2">
                        <a type="button" class="btn btn-outline-danger" href="/api/auth/logout">Close Session</a>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
    <div class="col-7 d-flex align-items-center">
        <div class="w-100 h-100">
            <div class="card mb-4 h-100">
            <div class="card-body d-flex align-items-center">
                <div class="w-100">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bolder">Full Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{name}}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bolder">Age</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{age}} years</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bolder">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{email}}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bolder">Phone</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">({{phoneCode}}) {{phone}}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bolder">Address</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{address}}</p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>